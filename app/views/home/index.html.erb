<div class="grid_9" id="news-list">
  <%= will_paginate @links %>
  
  <% if (@links.length==0) %>
    There's nothing here.
  <% elsif %>
    <%= render :partial => 'links' %>
  <% end %>

</div>

<div id="filter_wrapper" class="grid_3">
  <div id="filter">
    <form action="" method="">
      <label>Don't show:</label>
      <select id="filter-list">
        <option value="headline">headline only</option>
        <option value="self">self posts</option>
        <option value="videos">videos</option>
        <option value="pictures">pictures</option>
        <option value="dae">does anyone else...</option>
        <option value="pets">"my dog", "my cat"</option>
        <option value="girlfriend">"my girlfriend"</option>
        <option value="nsfw">nsfw</option>
        <option>custom filter...</option>
      </select>
      <input type="submit" value="add" />
    </form>
    <ul id="selected-filters">
    </ul>
  </div>
</div>
